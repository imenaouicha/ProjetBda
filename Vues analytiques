-- Occupation des salles CREATE OR REPLACE VIEW planning.v_occupation_salles AS SELECT l.nom, l.batiment, l.capacite, e.date_heure, COUNT(i.etudiant_id) AS nb_inscrits FROM planning.examens e JOIN planning.lieu_examen l ON e.salle_id = l.id JOIN planning.inscriptions i ON e.examen_id = i.examen_id GROUP BY l.nom, l.batiment, l.capacite, e.date_heure; -- Examens par Ã©tudiant CREATE OR REPLACE VIEW planning.v_examens_etudiant AS SELECT et.id AS etudiant_id, et.nom, et.prenom, e.id AS examen_id, e.date_heure, e.module_id FROM planning.etudiants et JOIN planning.inscriptions ins ON ins.etudiant_id = et.id JOIN planning.examens e ON e.id = ins.examen_id;
